{
  "version": "0.0.0",
  "name": "allusion",
  "description": "Notebook app",
  "keywords": [
    "allusion",
    "typed",
    "flow"
  ],
  "main": "lib/allusion",
  "module": "src/allusion",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (http://jeditoolkit.com)",
  "repository": "https://github.com/Gozala/allusion",
  "license": "MIT",
  "devDependencies": {
    "alias-quokka-plugin": "^0.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-flow-node": "^2.0.1",
    "babel-preset-flow-syntax": "1.0.1",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "documentation": "^6.1.0",
    "flow-bin": "0.68.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.0",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-legacy": "1.0.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-postcss": "1.4.0",
    "rollup-plugin-serve": "0.4.2",
    "source-map-support": "0.5.4"
  },
  "scripts": {
    "test": "npm run build:node && npm run test:flow && npm run test:tape",
    "test:tape": "blue-tape -r babel-register -r source-map-support/register 'test/**/*.js'",
    "test:flow": "flow check",
    "build:clear": "rm -rf lib",
    "build:types": "flow-copy-source --verbose src lib",
    "build:node": "babel --out-dir lib src",
    "build:api": "documentation readme --section=API src/allusion.js",
    "build:docs": "documentation build --document-exported src/** -f html --o docs",
    "build": "npm run build:node && npm run build:types",
    "-prepublish": "npm run build && npm test",
    "precommit": "lint-staged",
    "start": "rollup -w -c --embed UI/Main",
    "start:legacy": "flow-copy-source --watch --verbose src lib & babel --watch --out-dir lib src"
  },
  "lint-staged": {
    "*.js": [
      "prettier --parser flow --no-semi --write",
      "git add"
    ]
  },
  "quokka": {
    "alias": {
      "allusion": "src/allusion"
    },
    "pro": true,
    "babel": {
      "env": "development"
    },
    "plugins": [
      "alias-quokka-plugin"
    ]
  },
  "dependencies": {
    "@beaker/webdb": "4.1.1",
    "codemirror": "5.36.0",
    "fast-diff": "1.1.2",
    "markdown-it": "8.4.1",
    "markdown-it-checkbox": "1.1.0",
    "orderedmap": "1.0.0",
    "prosemirror-commands": "1.0.5",
    "prosemirror-dropcursor": "1.0.0",
    "prosemirror-example-setup": "1.0.1",
    "prosemirror-gapcursor": "1.0.2",
    "prosemirror-history": "1.0.2",
    "prosemirror-inputrules": "1.0.1",
    "prosemirror-keymap": "1.0.1",
    "prosemirror-menu": "1.0.4",
    "prosemirror-model": "1.4.0",
    "prosemirror-schema-basic": "1.0.0",
    "prosemirror-schema-list": "1.0.1",
    "prosemirror-state": "1.1.1",
    "prosemirror-view": "1.2.0",
    "unreachable": "0.2.0"
  }
}
